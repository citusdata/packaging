#!/usr/bin/make -f

include /usr/share/postgresql-common/pgxs_debian_control.mk

override_dh_auto_build:
	+pg_buildext build $(shell pwd)/src/bin/citusha build-%v
	+pg_buildext build $(shell pwd)/src/monitor build-%v

override_dh_auto_clean:
	+pg_buildext clean $(shell pwd)/src/bin/citusha build-%v
	+pg_buildext clean $(shell pwd)/src/monitor build-%v

override_dh_auto_test:
	# nothing to do here, see debian/tests/* instead

override_dh_auto_install:
	+pg_buildext install $(shell pwd)/src/bin/citusha build-%v postgresql-%v-citus-ha
	+pg_buildext install $(shell pwd)/src/monitor build-%v postgresql-%v-citus-ha

%:
	dh $@